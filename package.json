{
  "name": "chatbot-zalo-simulator",
  "private": true,
  "version": "1.0.0",
  "description": "Zalo OA Chatbot Simulator with webhook integration and Gemini AI",
  "workspaces": [
    "backend",
    "zalo"
  ],
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../zalo && npm install",
    "dev:frontend": "cd zalo && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" -n \"FRONTEND,BACKEND\" -c \"bgBlue.bold,bgGreen.bold\"",
    "build:frontend": "cd zalo && npm run build",
    "preview:frontend": "cd zalo && npm run preview"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "zalo",
    "chatbot",
    "webhook",
    "gemini-ai",
    "simulator"
  ],
  "author": "",
  "license": "MIT"
}
